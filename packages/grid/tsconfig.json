{
  "compilerOptions": {
    "jsx": "preserve",
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsxImportSource": "@emotion/react",
    "outDir": "./dist"
  },
  "include": ["./src/**/*"]
}
