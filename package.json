{
  "name": "gio-workspace",
  "version": "1.0.0",
  "license": "MIT",
  "author": "Giordano Ricci <me@giordanoricci.com>",
  "repository": "github:Elfo404/gio",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o public",
    "test": "jest",
    "build:all": "lerna run build",
    "publish:pre": "lerna publish --conventional-commits --conventional-prerelease --no-changelog --yes --dist-tag next",
    "publish:stable": "lerna publish --conventional-commits --conventional-graduate --create-release github --yes"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@emotion/babel-plugin": "^11.3.0",
    "@emotion/react": "^11.1.5",
    "@storybook/addon-actions": "^6.2.7",
    "@storybook/addon-essentials": "^6.2.7",
    "@storybook/addon-links": "^6.2.7",
    "@storybook/react": "^6.2.7",
    "@types/jest": "^26.0.22",
    "babel-loader": "^8.2.2",
    "husky": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "prettier-plugin-import-sort": "^0.0.6",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "importSort": {
    ".js, .ts, .tsx": {
      "style": "module"
    }
  }
}
